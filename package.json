{
  "scripts": {
    "start": "next",
    "lint": "eslint --fix",
    "format": "prettier --write",
    "commit": "commitlint --edit",
    "test": "jest --watch --bail",
    "test:cov": "jest --bail --coverage --findRelatedTests",
    "prepare": "husky install",
    "staged": "lint-staged"
  },
  "dependencies": {
    "next": "^10.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run lint",
    "*.{ts,tsx,css,md,json}": "npm run format"
  }
}
