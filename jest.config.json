{
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "<rootDir>/**/*.{ts,tsx}",
    "!<rootDir>/pages/**",
    "!**/*.d.ts",
    "!**/index.ts",
    "!**/components/**",
    "!**/entities/**",
    "!**/fake-*.ts"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "transform": {
    "^.+\\.(tsx)$": "<rootDir>/node_modules/babel-jest",
    ".+\\.(ts)$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/$1"
  }
}
