{
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "<rootDir>/**/*.{ts,tsx}",
    "!<rootDir>/pages/**",
    "!**/*.d.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": -10
    }
  },
  "transform": {
    "^.+\\.(tsx)$": "<rootDir>/node_modules/babel-jest",
    ".+\\.(ts)$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/$1"
  }
}
